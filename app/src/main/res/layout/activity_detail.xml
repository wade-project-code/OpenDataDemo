<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActDetail"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:id="@+id/mImgView"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/mCardView"
        android:layout_margin="5dp"
        android:padding="5dp"
        app:cardCornerRadius = "10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:textSize="16dp"
                android:text="動物的實際所在地"
                android:id="@+id/mTextViewPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:textSize="16dp"
                android:text="動物的類型"
                android:id="@+id/mTextViewKind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:textSize="16dp"
                android:text="動物性別"
                android:id="@+id/mTextViewSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:textSize="16dp"
                android:text="動物體型"
                android:id="@+id/mTextViewBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:textSize="16dp"
                android:text="動物毛色"
                android:id="@+id/mTextViewColour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:textSize="16dp"
                android:text="動物年紀"
                android:id="@+id/mTextViewAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>